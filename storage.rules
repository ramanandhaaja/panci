rules_version = '2';

// Firebase Storage Security Rules for Panci Canvas App
// These rules allow authenticated users to upload and view canvas images
service firebase.storage {
  match /b/{bucket}/o {

    // Canvas images - stored at canvases/{canvasId}/latest.png
    match /canvases/{canvasId}/{fileName} {
      // Public read for widget access
      // Allows canvas images to be displayed in iOS/Android widgets
      allow read: if true;

      // Only authenticated users can upload/update canvas images
      // Only PNG files under 5MB are allowed
      // Note: We can't check canvas ownership here without another Firestore read
      // Trust the application layer to check permissions before upload
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType == 'image/png';

      // Only authenticated users can delete canvas images
      allow delete: if request.auth != null;
    }
  }
}
